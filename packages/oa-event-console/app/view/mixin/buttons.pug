//- Button groups for an input gorup
mixin button_save_cancel( id )
  .input-group-btn
    +button_only_save(id + "-save").rule-group-save&attributes(attributes)
    +button_only_delete(id + "-cancel").rule-group-delete&attributes(attributes)

mixin button_save_cancel_delete( id )
  .input-group-btn
    +button_only_save(id + "-save").rule-group-save&attributes(attributes)
    +button_only_cancel(id + "-cancel").rule-group-cancel&attributes(attributes)
    +button_only_delete(id + "-delete").rule-group-delete&attributes(attributes)


//- The for normal buttons, no variation

mixin button_only_save( id )
  button.btn.btn-success.button-save.mixin-button(type="button" value='Save'
    title="Save"
    data-id=`${id}`)&attributes(attributes)
    span.glyphicon.glyphicon-ok(aria-hidden="true" title="Save")

mixin button_only_add( id )
  button.btn.btn-success.button-save.mixin-button(type="button" value='Add'
    title="Add"
    data-id=`${id}`)&attributes(attributes) 
    span.glyphicon.glyphicon-ok(aria-hidden="true" title="Add")

mixin button_only_cancel( id )
  button.btn.btn-primary.button-cancel.mixin-button(type="button" value='Cancel'
    title="Cancel"
    data-id=`${id}`)&attributes(attributes)
    span.glyphicon.glyphicon-remove.mixin-button(aria-hidden="true" title="Cancel")

mixin button_only_delete( id )
  button.btn.btn-danger.button-delete.mixin-button(type="button" value='Delete'
    title="Delete"
    data-id=`${id}`)&attributes(attributes)
    span.glyphicon.glyphicon-trash(aria-hidden="true" title="Delete")


//- Small buttons with only glyphs

mixin button_save( id, context )
  - var context = typeof(context)==='undefined' ? '' : " "+context  
  button.btn.btn-success.button-save.mixin-button.marginright5(type="button"
    title=`Save${context}` value=`Save${context}` class=`${margin_class}`
    data-id=`${id}`)&attributes(attributes)
    span.glyphicon.glyphicon-ok(aria-hidden="true" title=`Save${context}`)

