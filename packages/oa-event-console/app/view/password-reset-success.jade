extends _template

include mixin/cards

block nav
  include ./_nav_generic.jade

block content
  .header
  .container
    +unauth_card('Reset Password')

      form#form-public-password-reset(role='form' action='/password/reset' method='post')

        if messages
          if messages.error
            .alert.alert-danger.margintop15 #{messages.error}
          if messages.warn
            .alert.alert-warn.margintop15 #{messages.warn}
          if messages.info
            .alert.alert-info.margintop15 #{messages.info}
          if messages.success
            .alert.alert-info.margintop15 #{messages.success}
        else
          .message.margintop15 Please enter a new password

        .text-center
          a.btn.btn-accent(href='/') Continue to home page