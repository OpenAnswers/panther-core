#modal-delete-user.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        button(type="button" class="close" value="Close" data-dismiss="modal" aria-label="Close") &times;
        h2.modal-title Delete User
      .modal-body
        p Are you sure you wish to delete the user '#[span#user-name]'?
      .modal-footer
        button(type="button" data-dismiss="modal").btn.btn-default Cancel
        button(type="button" value='Confirm Delete')#user-confirm.btn.btn-danger Delete
