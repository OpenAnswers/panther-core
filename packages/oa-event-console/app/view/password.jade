extends _template

include mixin/cards

block nav
  include ./_nav_generic.jade

block content
  .header
  .container
    +unauth_card("Request a password reset")
      form#form-public-password-request-reset(role='form' action='/password/requested' method='post')

        if (error)
          .alert-danger #{error}
        
        .form-group.margintop15
          input.form-control(type='email' name='email' placeholder='Email' required)
    
        .form-group.text-center
          button.btn.btn-success.marginright5(type='submit' value='Request Reset') Request Reset
          a.btn.btn-accent(href='/') Cancel