tr.generic-fieldenums-entry
  td.has-feedback
    .generic-fieldenums-field.edit-padding
      input.form-control(type="text" value="{{ name }}" placeholder="field" name="transform-field"
      class="generic-fieldenums-field-{{ data.name }}")

  td.has-feedback
    .generic-fieldenums-value
      select.form-control(placeholder="value"
      class="generic-enum-value-{{ data.name }}" name='transform')
        | {{ #options_list }}
        | {{ #selected }}
        option(value="{{ value }}" selected="true") {{ label }}
        | {{ /selected }}
        | {{ ^selected }}
        option(value="{{ value }}") {{ label }}
        | {{ /selected }}
        | {{ /options_list }}

  td
    span.glyphicon.glyphicon-remove.generic-delete-button.generic-fieldenums-delete-button.generic-glyph-padding