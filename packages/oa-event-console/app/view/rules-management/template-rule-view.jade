script(id="template-rule-view" type="text/x-mustache-template")
  table.table.table_nested.table-hover.reference-rule-table
    tr.heading.reference-event-heading
      th.col-xs-9 name
    | {{ #globals }}
    tr.reference-rule-entry.rule-global(data-field="{{ uuid }}")
      td.col-xs-9.reference-rule-highlight-value.rule-selector-globals global / {{ name }}
    | {{ /globals }}
    | {{ #groups }}
    tr.reference-rule-entry.rule-group(data-field="{{ group_uuid }}")
      td.col-xs-9.reference-rule-highlight-value.rule-selector-group group / {{ group_name }}
    | {{ /groups }}

