      .right
        span.glyphicon.glyphicon-remove.select-delete-button
      .left
        .selects-fixed-width
          .schedule-field.edit-padding
            input.form-control(type="text" value="{{ data.field }}" placeholder="schedule" name='schedule'
            class="input-verb-select-{{ data.verb }}-field")
