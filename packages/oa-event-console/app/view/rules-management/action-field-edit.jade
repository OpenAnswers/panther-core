script(id="template-action-field-edit" type="text/x-mustache-template")
  .action-entry-edit.collapse(data-action-id="{{ data.verb }}" 
  data-action-uvid="{{ data.uvid }}" class="action-{{ data.verb }}")
    .inner
      .right
        span.glyphicon.glyphicon-remove.action-delete-button
      .left
        .action-set-fixed-width
          .action-operator
            input(type='text' name='operator' value='{{ data.verb }}').form-control
          .action-field.input-group
            span.input-group-addon field
            input(type='text' name='field' value='{{ data.field }}').form-control
