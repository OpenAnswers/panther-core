script(id="template-select-field-edit" type="text/x-mustache-template")
  .select-entry-edit.collapse(data-select-id="{{ data.verb }}")
    .inner
      .right
        span.glyphicon.glyphicon-remove.select-delete-button
      .left
        .selects-fixed-width
          .select-field.edit-padding
            input.form-control(type="text" value="{{ data.field }}" placeholder="field" name='field'
            class="input-verb-select-{{ data.verb }}-field")
          .select-operator.edit-padding
            input.form-control(type="text" value="{{ data.verb }}" placeholder="operator" name='operator'
            class="form-control")
