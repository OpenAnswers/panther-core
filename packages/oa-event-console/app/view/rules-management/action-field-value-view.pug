script(id="template-action-field-value-view" type="text/x-mustache-template")
  .action-entry-view(data-action-id="{{ data.verb }}" 
  data-action-uvid="{{ data.uvid }}" class="action-{{ data.verb }}")
    .inner
      span.action-view-gem(class="action-view-gem-{{ data.verb }}")
      span.action-view-operator {{ data.verb }}
      span.action-view-text &nbsp;the value of&nbsp;
      span.action-view-field #[code {{ data.field }}]
      span.action-view-text &nbsp;to&nbsp;
      span.action-view-value #[code {{ data.value }}]
