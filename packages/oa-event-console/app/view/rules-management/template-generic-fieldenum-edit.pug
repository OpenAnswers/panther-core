script(id="template-generic-fieldenum-edit" type="text/x-mustache-template")
  .generic-fieldenum-edit(id="{{ data.euid }}-edit"
  data-name="{{ data.name }}" class="{{ data.class }}")
    .form-group

      //- Name/Label
      .generic-fieldenum-field.edit-padding
        input.form-control(type="text" value="{{data.field}}" placeholder="field"
        class="generic-fieldvalue-field-{{data.field}}")
      //- Value
      .generic-fieldenum-value.edit-padding
        select.form-control(placeholder="value"
        class="generic-fieldenum-value-{{ data.name }}")
          | {{ #data.options_list }}
          | {{ #selected }}
          option(value="{{ value }}" selected="true") {{ label }}
          | {{ /selected }}
          | {{ ^selected }}
          option(value="{{ value }}") {{ label }}
          | {{ /selected }}
          | {{ /data.options_list }}

      //- For single items this should probably render inline?
      .generic-fieldenum-save-interface.hidden
        .text-center
          +button_word_save('group-save')
          +button_word_cancel('group-cancel')
        .margintop10
