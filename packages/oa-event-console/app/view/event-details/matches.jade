//- Render templates
script(id="event-details-matches-global-row-template" type="text/x-handlebars-template")
  tr.match-global-row
    td.col-xs-4 {{name}}
    td.col-xs-9(title="{{uuid_full}}") {{uuid}}

script(id="event-details-matches-group-row-template" type="text/x-handlebars-template")
  tr.match-group-row
    td.col-xs-4 {{group_name}}
    td.col-xs-4(style="font-style: italic;") Group selector
    td.col-xs-9(title="{{group_uuid_full}}") {{group_uuid}}

script(id="event-details-matches-rule-row-template" type="text/x-handlebars-template")
  tr.match-rule-row
    td.col-xs-4 {{group_name}}
    td.col-xs-4 {{name}}
    td.col-xs-9(title="{{uuid_full}}") {{uuid}}



//- Container content
h5 Global Rules
table#event-details-modal-global-matches-table.table.table_nested.table-hover
  thead
    tr
      td Rule
      td UUID
  tbody
h5 Group Rules
table#event-details-modal-group-matches-table.table.table_nested.table-hover
  thead
    tr
      td Group
      td Rule
      td UUID
  tbody