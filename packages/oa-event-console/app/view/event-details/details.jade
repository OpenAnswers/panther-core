script(id="event-details-details-field-template" type="text/x-handlebars-template")
  .entry
    .title {{title}}
    .content
      |{{#content}}
      |  {{content}}
      |{{/content}}
      |{{^content}}
      |  None
      |{{/content}}

script(id="event-details-details-fields-template" type="text/x-handlebars-template")
  .entry
    .title Node
    .content {{node}}
  .entry
    .title Owner
    .content
      |{{#owner}}
      |  {{owner}}
      |{{/owner}}
      |{{^owner}}
      |  None
      |{{/owner}}
  .entry
    .title Severity
    .content {{severity}}
  .entry
    .title Group
    .content 
      |{{#group}}
      |  {{group}}
      |{{/group}}
      |{{^group}}
      |  None
      |{{/group}}

script(id="event-details-details-summary-template" type="text/x-handlebars-template")
  .entry
    .title Summary
    .content
      | {{{summary}}}


