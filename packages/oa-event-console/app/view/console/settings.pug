//- Container content for templates to be rendered into
#console-settings-modal.modal.fade
  .modal-dialog.modal-lg
    .modal-content

      #console-settings-modal-tabpanel.modal-body(role='tabpanel')

        button.close(data-dismiss='modal' aria-lable='Close' value="Close")
          span(aria-hidden='true') &times;
        ul.nav.nav-tabs
          li.active
            a(href='#console-settings-modal-global' data-toggle="tab") Global
          li
            a(href='#console-settings-modal-user' data-toggle="tab").hidden   User

        .tab-content
          #console-settings-modal-global.tab-pane.active
            a#console-settings-tracking(href='#console-settings-tracking') 
            table#console-settings-table.table
              tr
                td.col-xs-2
                  | Tracking
                td
                  .btn-group(role="group")
                    button#console-settings-button-tracking-on(type='button', data-action="tracking-on", value="On").btn-default
                      | On
                    button#console-settings-button-tracking-off(type='button', data-action="tracking-off", value="Off").btn-default
                      | Off

          #console-settings-modal-user.tab-pane
            | blah

      .modal-footer.dropup.hidden
        .btn-group
          button.btn.btn-default.console-settings-save(data-action="save")
            | Save