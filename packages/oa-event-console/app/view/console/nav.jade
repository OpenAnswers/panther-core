.inner 
  .toolbar-left
    
    
    // --------------------------------------------------------------------------------------------
    .section.console-toolbar-groups
      .section-label GROUP
      //  span.glyphicon.glyphicon-tags
      .section-dropdown
        .dropdown
          button(type='button', data-toggle='dropdown', name='group-filter').btn.btn-default.btn-sm.dropdown-toggle
            span.console-group-name All
            span.caret
          ul.dropdown-menu(role='menu')
            include ./groups.jade

    .section-divider

    .section.console-toolbar-views
      .section-label VIEW
        //span.glyphicon.glyphicon-picture
      .section-dropdown
        .dropdown
          button(type='button', data-toggle='dropdown', name='view-filter').btn.btn-default.btn-sm.dropdown-toggle
            span.console-view-name(name='console-view-name') #{default_filter.name}
            span.caret
          ul.dropdown-menu(role='menu')
            include ./views.jade
            
    .section-divider.hidden-xs.hidden-sm.hidden-md

    .section.console-toolbar-severities.hidden-xs.hidden-sm.hidden-md
      .section-label SEVERITY
      //        span.glyphicon.glyphicon-warning-sign
      .section-dropdown
        .dropdown
          button(type='button', data-toggle='dropdown', name="severity-filter").btn.btn-default.btn-sm.dropdown-toggle
            span.console-severity-name
              span.colour-severity-dropdown.colour-white &nbsp;
              span(style="float: left") All
            span.caret
          ul.dropdown-menu(role='menu')
            include ./severities.jade

    // --------------------------------------------------------------------------------------------
    .section-divider
      
    .section.console-toolbar-search.hidden-xs
      //.section-label
      .section-search
        .has-feedback.has-clear
          input#console-search-input.form-control.search-bar-thin(type="text" name='searchbar-thin')
          span#console-toolbar-search-icon.glyphicon.glyphicon-search.form-control-feedback.form-control-clear.
    
  .toolbar-right.pull-right
    // Icons/Settings
    .section.icons
      .toolbar-icon#toolbar-icon-activity-expand(title="Show Activity Sidebar")
        span.glyphicon.glyphicon-triangle-left
      .toolbar-icon#toolbar-icon-settings(title="Console Settings")
        span.glyphicon.glyphicon-cog
      .toolbar-icon#toolbar-icon-refresh(title="Force Refresh")
        span.glyphicon.glyphicon-refresh
      .toolbar-icon#toolbar-icon-columns(title="Select Columns")
        span.glyphicon.glyphicon-list(data-toggle="dropdown")
        ul.dropdown-menu.two-columns(role='menu' style="margin-left: -300px")
          include ./columns.jade
      .toolbar-icon#toolbar-icon-minimal-mode(title="Toggle Minimal Mode")
        span.glyphicon.glyphicon-open
      //
        .toolbar-icon#toolbar-icon-pause
          span.glyphicon.glyphicon-pause
      
















//
    .section.console-toolbar-connectionstatus.
      //- button(type='button').btn.btn-default.console-toolbar-button-connectionstatus
      span.label.label-info.console-toolbar-connectionstatus-label.fade.in
        span.console-toolbar-connectionstatus-text.margin-right5 Status 
        //-span.glyphicon.console-toolbar-connectionstatus-icon


//
      .section.console-toolbar-refresh
        .section-dropdown
          button(type='button').btn.btn-default
            span.console-toolbar-refresh-label| Refresh 
            span.glyphicon.glyphicon-refresh

      .section.console-toolbar-pause.hide
        .section-dropdown
          button(type='button').btn.btn-default.disabled
            span.console-toolbar-pause-label Pause 
            span.glyphicon.glyphicon-pause
      

      .section.console-toolbar-columns.hidden-xs.hidden-sm.hidden-md
        .section-dropdown
          .dropdown.dropdown-persistant
            button(type='button', data-toggle='dropdown').btn.btn-default.btn-sm.dropdown-toggle
              span.console-toolbar-columns-label Columns
              span.caret
            ul.dropdown-menu.two-columns.dropdown-menu-gap(role='menu')
              include ./columns.jade

      .section-divider.hidden-xs

