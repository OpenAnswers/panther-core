
//- This is the event details modal
    Each tab has it's own jade file and templates

#console-help-modal.modal.fade
  .modal-dialog.modal-lg
    .modal-content

      #console-help--modal-tabpanel.modal-body(role='tabpanel')

        //- Buttons for the content tabs
        button.close(data-dismiss='modal' aria-lable='Close' value="Close")
          span(aria-hidden='true') &times;
        ul.nav.nav-tabs
          li.active
            a(href='#console-help-modal-events' data-toggle="tab") Event Console
          li
            a(href='#console-help-modal-keyboard' data-toggle="tab") Keyboard Shortcuts

        //- Content container for each tab
        .tab-content
          #console-help-modal-events.tab-pane
            //include console-help-events
            include:md help-events.md

          #console-help-modal-keyboard.tab-pane.active
            //include console-help-keyboard
            //include:md console-help-keyboard.md
            include help-keyboard




      //- Buttons in the footer      
      .modal-footer.dropup
        
        .btn-group
          button.btn.btn-default(data-dismiss='modal') Close
