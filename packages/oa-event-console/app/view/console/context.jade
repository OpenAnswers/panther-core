ul#console-context-menu.dropdown-menu.console-context-menu(role='menu')
  
  //- Acknowledge
  li.console-context-acknowledge(role='presentation')
    a(role='menuitem' tabindex='-1' action='acknowledge') Acknowledge

  //- Acknowledge with note
  li.console-context-acknowledge-with-note(role='presentation')
    a(role='menuitem' tabindex='-1' action='acknowledge-with-note') Acknowledge with note


  //- Unacknowledge
  li.console-context-unacknowledge(role='presentation')
    a(role='menuitem' tabindex='-1' action='unacknowledge') Unacknowledge

  //- Add external ID
  li.console-context-add-extid(role='presentation')
    a(role='menuitem' tabindex='-1' action='add-extid') Add external ID

  //- Add note
  li.console-context-add-note(role='presentation')
    a(role='menuitem' tabindex='-1' action='notes') Add note

  //- Clear event
  li.console-context-clear(role='presentation')
    a(role='menuitem' tabindex='-1' action='clear') Clear

  li.divider(role='separator') 

  //- Assign to a user
  //- Build from dropdown-submenu
  li.console-context-assign.dropdown-submenu(role='presentation')
    a(role='menuitem' tabindex='-1' ) Assign
    ul#console-context-menu-assign.dropdown-menu.console-context-menu
      include ./context-users.jade

  //- Severity
  li.console-context-severity.dropdown-submenu(role='presentation')
    a(role='menuitem' tabindex='-1') Severity
    ul#console-context-menu-severity.dropdown-menu.console-context-menu
      include ./context-severities.jade


  li.divider(role='separator') 
  
    
  //- View details of Event
  li.console-context-details(role='presentation')
    a(role='menuitem' tabindex='-1' action='details') Details

  li
    a.copy-context-brief(data-clipboard-target="#clipboard_brief_text" role='menuitem' tabindex='-1' action='copy-event') Copy Event

  //- Create Rule from Event
  li.console-context-tools.dropdown-submenu(role='presentation')
    a(role='menuitem' tabindex='-1') Tools
    ul#console-context-menu-tools.dropdown-menu.console-context-menu
      li.console-context-delete(role='presentation')
        a(role='menuitem' tabindex='-1' action='delete') Delete
      li.divider(role='separator') 
      li.create-rule
        a(role='menuitem' tabindex='-1' action='create-rule') Create Rule
      if node_env == "development"
        li.divider(role='separator') 
        li.create-zendesk
          a(role='menuitem' tabindex='-1' action='create-zendesk' href='#') Zendesk Ticket
