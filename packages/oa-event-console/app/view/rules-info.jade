extends _template

block nav
  - var nav_location = 'rules'
  include ./_nav_generic.jade
  
block content
  .container
    #docheadings.markdown_toc.hidden-xs
      nav.col-sm-3.markdown-docs-sidebar
        ul#rules_info_sidebar.sidebar.nav.nav-stacked.fixed(role='tablist')
          li #[a(href="#rules")      Rules]
          li #[a(href="#order")      Order]
          li #[a(href='#shortcuts')  Shortcuts]
          li #[a(href='#selecting')  Selecting]
          li #[a(href='#conditions') Conditions]
          li #[a(href='#actions')    Actions]

    .markdown.col-sm-9(data-spy='scroll' data-target='#docheadings')
      .card.card-generic
        a.anchor(name="getting-started")
        .inner
          .content
            include:md rules.md

      .markdown_anchor_gap

