<div id="loginContainer">
    <div id="topBar">
        <div id="logo">
            <img src="img/logo.gif"> 
        </div>
        <div id="title">
            Event Console<br>
            <span style="font-size: 0.85em;"><%= version %></span>
        </div>
    </div>
    <div id="secondBar">
        <div id="text">
            Log-In
        </div>
    </div>
    
    <div id="inputContainer">
        <form method="post" action="logins"> 
            <div class="inputLine" style="margin-bottom: 15px;">
                <div class="inputLabel">Username</div>
                <div class="inputArea"><input type='text' name="username"></input></div>
            </div> 
            <div class="inputLine" style="margin-bottom: 25px;">
                <div class="inputLabel">Password</div>
                <div class="inputArea"><input type='password' name="password"></input></div>
            </div>
           
            <div class="inputButton">
                <input type="submit" value="Submit"></input>
            </div> 
        </form>
    </div>
</div>
