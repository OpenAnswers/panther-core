LOGIN=$1

# delete user 
echo "db.users.remove( { login:'$LOGIN' } ) " | mongo oa

echo "db.filters.remove( { user:'$LOGIN' } )" | mongo oa
echo "db.viewlayouts.remove( { user:'$LOGIN' } )" | mongo oa



